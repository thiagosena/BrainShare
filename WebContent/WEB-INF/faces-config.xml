<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	
	<navigation-rule>
        <display-name>login</display-name>
        <from-view-id>/login.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>inicio</from-outcome>
            <to-view-id>/principal.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <display-name>principal</display-name>
        <from-view-id>/principal.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>sair</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>
    
    <validator>
        <display-name>Valida a senha</display-name>
        <validator-id>ValidatePassword</validator-id>
        <validator-class>br.brainshare.validators.ValidatePassword</validator-class>
    </validator>
    
</faces-config>